# Application
APP_NAME=rag-chatbot
DEBUG=true
API_PREFIX=/api/v1

# Database (SQLite for dev; use postgres URL for production)
DATABASE_URL=sqlite+aiosqlite:///./data/rag.db

# JWT
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenAI (for LLM in RAG)
OPENAI_API_KEY=sk-your-openai-api-key

# Vector store (ChromaDB is local; optional Pinecone)
VECTOR_STORE_PATH=./data/chroma

# Optional: HuggingFace for local embeddings
# SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
